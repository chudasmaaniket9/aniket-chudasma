<style>
.promo-bar {
  width: 100%;
  background-color: #f4f8fc;
  border: 2px solid #1f2937;
}

.promo-container {
  max-width: 1200px;
  margin: auto;
  padding: 12px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* Left Side */
.brand-name {
  font-weight: 600;
  font-size: 14px;
  letter-spacing: 1px;
  color: #111;
}

/* Center Text */
.promo-text {
  font-size: 14px;
  color: #333;
}

/* Right Button */
.promo-btn {
  background-color: #ffe600;
  border: none;
  padding: 10px 20px;
  font-weight: 600;
  font-size: 13px;
  cursor: pointer;
  transition: 0.3s ease;
}

.promo-btn:hover {
  background-color: #ffd000;
}

/* ===== Responsive ===== */
@media (max-width: 768px) {
  .promo-container {
    flex-direction: column;
    gap: 10px;
    text-align: center;
  }
}
</style>